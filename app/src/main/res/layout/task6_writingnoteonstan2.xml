<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Task6">

    <TextView
        android:layout_width="360dp"
        android:layout_height="300dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="400dp"
        android:maxWidth="200dp"
        android:text="Затем определяется тональность произведения с помощью ключевых знаков (диезы или бемоли), которые ставятся сразу после ключа. Они изменяют звучание определённых нот на протяжении всего произведения."
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="300dp"
        android:layout_marginStart="220dp"
        android:layout_marginBottom="350dp"
        android:src="@drawable/diez"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="300dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="350dp"
        android:src="@drawable/bemols"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="253dp"
        android:layout_height="115dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="328dp"
        android:maxWidth="200dp"
        android:text="Выбирается тактовый размер, который определяет, сколько долей содержится. Например, 4/4, 2/4."
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="272dp"
        android:layout_marginBottom="340dp"
        android:src="@drawable/takt_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="389dp"
        android:layout_height="234dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="96dp"
        android:maxWidth="200dp"
        android:text="Записываются ноты. Форма ноты указывает на её длительность. Например, целая нота (пустой овал без штиля) длится дольше, чем четвертная (закрашенный овал со штилем).
После определённого количества долей (например, в размере 4/4 должно быть всего 4 доли, равных четвертной ноты) ставятся тактовые линии. Тактовые линии делят нотный стан на такты, что помогает организовать ритмическую структуру музыки.
"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_marginStart="50dp"
        android:onClick="click_next2"
        android:text="Далее"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>